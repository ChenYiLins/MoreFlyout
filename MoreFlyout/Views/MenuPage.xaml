<Page
    x:Class="MoreFlyout.Views.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.ContextFlyout>
        <MenuFlyout x:Name="ContextMenu" ShouldConstrainToRootBounds="False">
            <MenuFlyoutItem x:Uid="MenuFlyoutItem_Project" x:Name="ProjectMenuFlyoutItem" Click="MenuFlyoutItem_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE946;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Uid="MenuFlyoutItem_Close" x:Name="CloseMenuFlyoutItem" Click="MenuFlyoutItem_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE7E8;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </Page.ContextFlyout>
</Page>
